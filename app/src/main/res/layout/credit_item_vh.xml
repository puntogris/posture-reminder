<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <View
        android:id="@+id/view_divider"
        style="@style/Theme.Posture.Divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border"
        android:layout_marginHorizontal="@dimen/spacing_4"
        app:layout_constraintTop_toBottomOf="@+id/textView_credit_name" />

    <TextView
        android:id="@+id/textView_credit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:paddingHorizontal="@dimen/spacing_6"
        android:paddingVertical="@dimen/spacing_4"
        android:textSize="@dimen/text_md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_4"
        android:contentDescription="@string/open_action_content_description"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_caret_right"
        app:tint="?colorControlNormal" />

</androidx.constraintlayout.widget.ConstraintLayout>