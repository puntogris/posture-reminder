<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Posture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/nightBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/nightBackground</item>
        <item name="sheetsButtonTextFont">@font/roboto_bold</item>
        <item name="sheetsTitleFont">@font/roboto_medium</item>
        <item name="sheetsTitleColor">?colorControlNormal</item>
        <item name="sheetsBackgroundColor">#353535</item>
        <item name="preferenceTheme">@style/Theme.Posture.PreferenceScreen</item>
    </style>

    <style name="Theme.Posture.Licenses.Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/nightBackground</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="Theme.Posture.Layout">
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="Theme.Posture.Toolbar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/nightBackground</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Posture.ReminderButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">#20202B</item>
        <item name="shapeAppearanceOverlay">@style/Theme.Posture.RoundButtonShapeOverlay</item>
    </style>

    <style name="Theme.Posture.Shimmer">
        <item name="android:background">@drawable/round_corners_background</item>
        <item name="android:backgroundTint">#3D3D57</item>
    </style>

    <style name="Theme.Posture.Divider">
        <item name="android:background">#3D3D57</item>
        <item name="android:alpha">0.3</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="Theme.Posture.SlimDivider">
        <item name="android:background">@color/grey_60</item>
        <item name="android:alpha">0.1</item>
    </style>
</resources>