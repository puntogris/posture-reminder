<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Posture.Licenses">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="toolbarStyle">@style/Theme.Posture.Licenses.Toolbar</item>
    </style>

    <style name="Theme.Posture.Licenses.Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dayBackground</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="Theme.Posture.PreferenceScreen">
        <item name="preferenceStyle">@style/Theme.Posture.Preference</item>
        <item name="preferenceCategoryStyle">@style/Theme.Posture.CategoryPreference</item>
    </style>

    <style name="Theme.Posture.Preference">
        <item name="android:layout">@layout/preference_custom_item</item>
    </style>

    <style name="Theme.Posture.CategoryPreference">
        <item name="android:layout">@layout/preference_custom_category</item>
    </style>

    <style name="MyAlertDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textAllCaps">false</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="Theme.Posture.Layout">
        <item name="android:background">@color/dayBackground</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:background">?colorOnPrimary</item>
        <item name="colorSurface">?colorOnPrimary</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Posture.Button" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginStart">@dimen/spacing_large</item>
        <item name="android:layout_marginEnd">@dimen/spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_standard</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="Theme.Posture.MediumTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Theme.Posture.RegularTitle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Posture.TextMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.Posture.TextLight" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Theme.Posture.TextBlack" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="Theme.Posture.Toolbar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/dayBackground</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.Posture">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.Posture.ReminderButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">#787899</item>
        <item name="shapeAppearanceOverlay">@style/Theme.Posture.RoundButtonShapeOverlay</item>
    </style>

    <style name="Theme.Posture.RoundButtonShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="Theme.Posture.Shimmer">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:background">@drawable/round_corners_background</item>
    </style>

    <style name="Theme.Posture.Divider">
        <item name="android:background">@color/grey</item>
        <item name="android:alpha">0.2</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="Theme.Posture.SlimDivider">
        <item name="android:background">@color/grey_5</item>
        <item name="android:alpha">0.3</item>
    </style>
</resources>